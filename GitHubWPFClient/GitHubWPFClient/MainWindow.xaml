<Window x:Class="GitHubWPFClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GitHubWPFClient"
        mc:Ignorable="d"
        Title="GitHub Api WPF Client" Height="350" Width="525" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <TextBlock Margin="5">Username</TextBlock>
            <TextBox Name="input" Width="680" Margin="5" Text="{Binding UserName}"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Button Name="SendButton" Width="100" Margin="5">Send</Button>
        </StackPanel>
        <TextBox Grid.Row="2" Name="output" TextWrapping="Wrap" AcceptsReturn="True"></TextBox>
    </Grid>
</Window>
